local player = game.Players.LocalPlayer
local mouse = player:GetMouse()
local camera = game.Workspace.CurrentCamera
local UIS = game:GetService("UserInputService")

-- Function to lock the camera on a player
local function lockCamera(targetPlayer)
    -- Lock camera to the target player's head position
    camera.CameraSubject = targetPlayer.Character:WaitForChild("Head")
    camera.CameraType = Enum.CameraType.Attach

    -- Wait for 10 milliseconds, then unlock the camera
    wait(1.11)  -- 10 milliseconds
    camera.CameraSubject = player.Character:WaitForChild("Humanoid")  -- Switch back to the player's humanoid
    camera.CameraType = Enum.CameraType.Custom  -- Set the camera back to custom
end

-- Function to handle left mouse button click
local function onMouseClick(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        local targetPlayer = game.Players:GetPlayers()[math.random(1, #game.Players:GetPlayers())] -- For simplicity, this will target a random player
        if targetPlayer.Character then
            lockCamera(targetPlayer)
        end
    end
end

-- Connect the function to mouse click events
UIS.InputBegan:Connect(onMouseClick)
